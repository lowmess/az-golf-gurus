---
import Container from "#components/Container.astro";
import Logo from "#components/Logo.astro";
import PgaLogo from "#components/PgaLogo.astro";
---

<svg viewBox="0 0 1024 48" xmlns="http://www.w3.org/2000/svg" class="wave">
	<path d="M0 6.67c392.902 80.215 640.91-47.562 1024 7.679v33.427H0V6.67z"
	></path>
</svg>

<footer>
	<Container class="container">
		<PgaLogo />

		<a href="/" title="Home">
			<Logo />
		</a>
	</Container>
</footer>

<style>
	.wave {
		position: relative;
		top: 4px;
		fill: var(--color-green-700);
	}

	footer svg {
		fill: currentColor;
		height: var(--rhythm-xl);
		width: auto;
	}

	footer {
		padding-block: var(--space-lg);
		background-color: var(--color-green-700);
		color: var(--color-white);
	}

	a {
		color: var(--color-white);

		&:hover {
			color: inherit;
			opacity: 0.75;
		}
	}

	.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--space-lg);

		@media (min-width: 480px) {
			flex-direction: row;
			justify-content: center;
			gap: var(--space-xl);
		}

		@media (min-width: 640px) {
			justify-content: end;
		}
	}
</style>
