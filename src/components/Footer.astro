---
import Container from "#components/Container.astro";
import Logo from "#components/Logo.astro";
---

<svg viewBox="0 0 1024 48" xmlns="http://www.w3.org/2000/svg" class="wave">
	<path d="M0 6.67c392.902 80.215 640.91-47.562 1024 7.679v33.427H0V6.67z"
	></path>
</svg>

<footer>
	<Container class="container">
		<!--
			not sure if this is supported on non-Apple devices:
			<a href="maps:q=33.55194,-112.09812">1717 W Northern Ave. Suite 204</a>
		-->
		<address>
			<a href="https://maps.app.goo.gl/9ofkpkTKow8qjwRw9" rel="noreferrer"
				>1717 W Northern Ave. Suite 204<br />Phoenix, AZ 85021</a
			>
		</address>

		<a href="/" aria-label="Home">
			<Logo />
		</a>
	</Container>
</footer>

<style>
	.wave {
		position: relative;
		top: 4px;
		fill: var(--color-green-700);
	}

	footer {
		padding-block: var(--space-lg);
		background-color: var(--color-green-700);
		color: var(--color-white);
		font-family: var(--font-family-heading);

		svg {
			fill: currentColor;
			height: var(--rhythm-xl);
			width: auto;
		}
	}

	address {
		font-style: normal;
	}

	a {
		color: var(--color-white);

		&:hover {
			color: inherit;
			opacity: 0.75;
		}
	}

	.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		gap: var(--space-lg);
		text-align: center;

		@media (min-width: 480px) {
			flex-direction: row;
			gap: var(--space-xl);
			text-align: start;
		}
	}
</style>
